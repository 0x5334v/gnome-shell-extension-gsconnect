<node>
  <!-- Device -->
  <interface name="org.gnome.shell.extensions.gsconnect.device">
    <property type="b" name="connected" access="read"/>
    <property type="s" name="fingerprint" access="read"/>
    <property type="s" name="id" access="read"/>
    <property type="s" name="name" access="read"/>
    <property type="b" name="paired" access="read"/>
    <property type="as" name="plugins" access="read"/>
    <property type="s" name="type" access="read"/>
    
    <method name="activate"/>
    <method name="pair"/>
    <method name="unpair"/>
    <method name="acceptPair"/>
    <method name="rejectPair"/>
    <method name="enablePlugin">
      <arg name="pluginName" type="s" direction="in"/>
      <arg name="success" type="b" direction="out"/>
    </method>
    <method name="disablePlugin">
      <arg name="pluginName" type="s" direction="in"/>
      <arg name="success" type="b" direction="out"/>
    </method>
    <method name="configurePlugin">
      <arg name="pluginName" type="s" direction="in"/>
      <arg name="JSON" type="s" direction="in"/>
      <arg name="success" type="b" direction="out"/>
    </method>
    <method name="reloadPlugins"/>
    
    <signal name="pairRequest">
      <arg name="publicKey" type="s"/>
    </signal>
  </interface>
  
  <!-- Battery -->
  <interface name="org.gnome.shell.extensions.gsconnect.battery">
    <property type="b" name="charging" access="read"/>
    <property type="i" name="level" access="read"/>
    <method name="update"/>
  </interface>
  
  <!-- FindMyPhone -->
  <interface name="org.gnome.shell.extensions.gsconnect.findmyphone">
    <method name="ring"/>
  </interface>
  
  <!-- Notifications (Receive) -->
  <interface name="org.gnome.shell.extensions.gsconnect.notifications">
    <method name="notifications"/>
    <signal name="notificationReceived"/>
    <signal name="notificationDismissed"/>
    <signal name="notificationsDismissed"/>
  </interface>
  
  <!-- Ping -->
  <interface name="org.gnome.shell.extensions.gsconnect.ping">
    <method name="ping"/>
    <signal name="ping"/>
  </interface>
  
  <!-- Run Commands -->
  <interface name="org.gnome.shell.extensions.gsconnect.runcommand">
    <method name="sendCommandList"/>
  </interface>
  
  <!-- SFTP -->
  <interface name="org.gnome.shell.extensions.gsconnect.sftp">
    <property type="b" name="mounted" access="read"/> <!-- TODO: read/write? -->
    <property type="a{ss}" name="directories" access="read"/>
    
    <method name="mount"/>
    <method name="unmount"/>
  </interface>
  
  <!-- Share -->
  <interface name="org.gnome.shell.extensions.gsconnect.share">
    <method name="share">
      <arg name="uri" type="s" direction="in"/>
    </method>
    <signal name="share"/>
  </interface>
  
  <!-- Telephony -->
  <interface name="org.gnome.shell.extensions.gsconnect.telephony">
    <method name="sms">
      <arg name="phoneNumber" type="s" direction="in"/>
      <arg name="messageBody" type="s" direction="in"/>
    </method>
    
    <signal name="missedCall">
      <arg name="phoneNumber" type="s"/>
      <arg name="contactName" type="s"/>
    </signal>
    <signal name="ringing">
      <arg name="phoneNumber" type="s"/>
      <arg name="contactName" type="s"/>
    </signal>
    <signal name="sms">
      <arg name="phoneNumber" type="s"/>
      <arg name="contactName" type="s"/>
      <arg name="messageBody" type="s"/>
      <arg name="phoneThumbnail" type="s"/>
    </signal>
    <signal name="talking">
      <arg name="phoneNumber" type="s"/>
      <arg name="contactName" type="s"/>
    </signal>
  </interface>
</node>
