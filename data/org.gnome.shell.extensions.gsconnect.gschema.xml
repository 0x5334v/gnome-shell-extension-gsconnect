<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gsconnect">
  <schema id="org.gnome.shell.extensions.gsconnect" path="/org/gnome/shell/extensions/gsconnect/">
    <key name="debug" type="b">
      <default>false</default>
      <summary>Debug Mode</summary>
      <description>Enable debug features and logging</description>
    </key>
    <key name="show-indicators" type="b">
      <default>false</default>
      <summary>Show Indicators</summary>
      <description>Display devices as Indicators instead of in the User Menu</description>
    </key>
    <key name="show-offline" type="b">
      <default>true</default>
      <summary>Show Offline</summary>
      <description>Display devices even if offline</description>
    </key>
    <key name="show-unpaired" type="b">
      <default>true</default>
      <summary>Show Unpaired</summary>
      <description>Display devices even if unpaired</description>
    </key>
    <key name="devices" type="as">
      <default>[]</default>
      <summary>Enabled Devices</summary>
      <description></description>
    </key>
    <key name="keybindings" type="s">
      <default>"{}"</default>
      <summary>Extension Shortcuts</summary>
      <description>Keyboard shortcuts for extension actions</description>
    </key>
    <key name="nautilus-integration" type="b">
      <default>false</default>
      <summary>Nautilus Integration</summary>
      <description>Send files from the file browser context menu</description>
    </key>
    <key name="public-name" type="s">
      <default>"GSConnect"</default>
      <summary>Public Name</summary>
      <description>The name visible to other devices</description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.device">
    <key name="certificate-pem" type="s">
      <default>""</default>
      <summary>TLS Certificate</summary>
      <description>The TLS certificate for the device in PEM format</description>
    </key>
    <key name="id" type="s">
      <default>""</default>
      <summary>Device Id</summary>
      <description>The device Id (usually the hostname)</description>
    </key>
    <key name="keybindings" type="s">
      <default>"{}"</default>
      <summary>Device Shortcuts</summary>
      <description>Keyboard shortcuts for device actions</description>
    </key>
    <key name="name" type="s">
      <default>""</default>
      <summary>Device Name</summary>
      <description>The device name</description>
    </key>
    <key name="type" type="s">
      <default>"unknown"</default>
      <summary>Device Type</summary>
      <description>The device type</description>
    </key>
    <key name="enabled-plugins" type="as">
      <default>[]</default>
      <summary>Enabled Plugins</summary>
      <description>The plugins marked as enabled</description>
    </key>
    <key name="supported-plugins" type="as">
      <default>[]</default>
      <summary>Supported Plugins</summary>
      <description>The plugins the device supports</description>
    </key>
    <key name="tcp-host" type="s">
      <default>""</default>
      <summary>TCP Host</summary>
      <description>The last known address of the device</description>
    </key>
    <key name="tcp-port" type="u">
      <default>1716</default>
      <summary>TCP Port</summary>
      <description>The last know port of the device</description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.plugin.notification">
    <key name="receive-notifications" type="b">
      <default>true</default>
      <summary>Receive Notifications</summary>
      <description>Sync remote notifications</description>
    </key>
    <key name="send-notifications" type="b">
      <default>true</default>
      <summary>Send Notifications</summary>
      <description>Sync local notifications</description>
    </key>
    <key name="sync-icons" type="b">
      <default>true</default>
      <summary>Sync Icons</summary>
      <description></description>
    </key>
    <key name="applications" type="s">
      <default>'{"GSConnect":{"iconName":"phone","enabled":false}}'</default>
      <summary>Applications</summary>
      <description>A list of applications to sync notifications for</description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.plugin.runcommand">
    <key name="command-list" type="s">
      <default>"{}"</default>
      <summary>Commands</summary>
      <description>Executable commands</description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.plugin.sftp">
    <key name="automount" type="b">
      <default>false</default>
      <summary>Automatically Mount</summary>
      <description></description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.plugin.share">
    <key name="download-directory" type="s">
      <default>""</default>
      <summary>Download Directory</summary>
      <description></description>
    </key>
    <key name="download-subdirectory" type="b">
      <default>false</default>
      <summary>Use Sudirectory</summary>
      <description></description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.gsconnect.plugin.telephony">
    <key name="pause-music" type="s">
      <default>"never"</default>
      <summary>Pause Music</summary>
      <description></description>
    </key>
  </schema>
</schemalist>

